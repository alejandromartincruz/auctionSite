<!DOCTYPE html>
<html>
<head>
  <title>Auctionsite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-inverse">
<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="/"><span class="glyphicon glyphicon-home"></span> Home <span class="sr-only">(current)</span></a></li>
        <li><a href=<%=users_path%>><span class="glyphicon glyphicon-user"></span> Login</a></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-cog"></span> Menu <span class="caret"></span></a>
          <ul class="dropdown-menu">
	        <li><a href=<%=users_path%>>List of users</a></li>
            <li><a href=<%= new_user_path %>>New user</a></li>
            <li><a href="/">All the products</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Future feature</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Another future feature</a></li>
          </ul>
        </li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>

      </ul>
    </div><!-- /.navbar-collapse -->
</nav>
<div class="container">
	<%= yield %>
</div>

  <div id="footer">
      <div class="container">
        <p class="text-muted credit">Auction web made by <a href="#">Alejandro Martin</a>.</p>
      </div>
    </div>
</body>
</html>
